<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6600"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.waheguru_ji.todoapp.WriteHere"
    tools:showIn="@layout/activity_write_here"
    tools:ignore="GradleDependency">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/writing"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:fontFamily="casual"
            android:inputType="textMultiLine"
            android:text="@string/start_writing_here"
            android:textColor="#191900"
            android:textStyle="bold"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/save"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button_ready"
            android:fontFamily="casual"
            android:onClick="save"
            android:text="@string/save_data"
            android:textColor="#ff8000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/writing"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
